{
  "name": "openauth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && wrangler deploy --outdir=dist",
    "dev": "wrangler dev --var LOG_LEVEL:info",
    "dev:debug": "wrangler dev --var LOG_LEVEL:debug",
    "dev:info": "wrangler dev --var LOG_LEVEL:info",
    "deploy": "wrangler deploy",
    "lint": "eslint",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "@openauthjs/openauth": "^0.4.3",
    "hono": "^3.12.12",
    "valibot": "^1.0.0",
    "zod": "^3.22.4",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "wrangler": "^4.2.0"
  }
} 